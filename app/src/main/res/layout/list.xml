<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorListBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_thumbnail_url_list"
            android:layout_width="@dimen/steps_image_size"
            android:layout_height="@dimen/steps_image_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin_list"
            android:layout_marginEnd="@dimen/activity_horizontal_margin_list"
            android:layout_marginStart="@dimen/activity_horizontal_margin_list"
            android:layout_marginTop="@dimen/activity_vertical_margin_list"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/tw_list_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin_list"
            android:paddingEnd="@dimen/activity_horizontal_margin_list"
            android:paddingStart="@dimen/activity_horizontal_margin_list"
            android:paddingTop="@dimen/activity_vertical_margin_list"
            tools:text="Recipe Introduction" />
    </LinearLayout>
</FrameLayout>