<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="divider_attr">@color/dividerGrey</item>
        <item name="colorDialogBackgroundAttr">@color/darkGrey</item>
        <item name="alertDialogTheme">@style/alertDialog</item>
        <item name="list_background">@color/darkGrey</item>
        <item name="colorTextAttr">@color/colorText</item>
    </style>

    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:dividerHeight">@dimen/divider</item>
        <item name="android:divider">?attr/divider_attr</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">?attr/colorDialogBackgroundAttr</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="Tab_style" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
        <item name="tabBackground">?attr/list_background</item>
    </style>
    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?attr/colorTextAttr</item>
    </style>
</resources>
